.ac-drawer

    a.ac-drawer-close.visible-xs(ng-click="drawer.right.visible = false", ng-if="drawerPosition === 'right'")
        i.fa.fa-close.fa-lg
    .ac-drawer-tools
        ul
            li(ng-if="drawerPosition === 'right'", ng-click="toggleForecast()", ng-class="{on: drawer.right.visible && drawer.right.enabled}", style="margin-bottom: 50px;")
                div(ac-danger-icon, style="height: 60px; width:60px;")

            li.ac-submit-report-tab.on(ng-if="drawerPosition === 'left'", ng-click="goToSubmitReport()")
              i.fa.fa-plus.fa-2x
              i.fa.fa-tasks.fa-inverse.fa-2x
              span New report

            li.ac-filters.ac-min-filters(ng-if="drawerPosition === 'left'")
              ul.list-inline(ng-init="expandedMin = false",ng-class="{opened: expandedMin}")
                li.ac-minfilter-button(ng-click="expandedMin = !expandedMin")
                  i.fa.fa-map-marker.fa-inverse.fa-2x
                  span MIN Filter
                li(ng-repeat="minFilter in minFilters", ng-if="expandedMin",ng-click="toggleFilter('minFilter:'+ minFilter)", ng-class="{on: getMinFilters(minFilter)}")
                  div.report-allmin(ac-allmin-icon, ng-if="minFilter === 'all min'")
                  i.fa.fa-map-marker.fa-inverse.fa-2x(ng-class="'report-'+ minFilter", ng-if="minFilter !== 'all min'")
                  span {{ minFilter }}

            li.ac-filters.ac-date-filters(ng-if="drawerPosition === 'left'")
              ul.list-inline(ng-class="{opened: expandedDate}")
                li.on(ng-click="toggleDateFilters()")
                  i.fa.fa-calendar.fa-inverse.fa-2x
                  span {{ filters.obsPeriod }}
                li(ng-repeat="dateFilter in dateFilters", ng-if="expandedDate", ng-click="toggleFilter('obsPeriod:'+dateFilter);", ng-class="{hidden: filters.obsPeriod === dateFilter}")
                  i.fa.fa-calendar.fa-inverse.fa-2x
                  span {{ dateFilter }}
    .ac-drawer-body(ng-transclude)
